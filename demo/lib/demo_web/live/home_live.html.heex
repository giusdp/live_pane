  <LivePane.pane group_id="demo" id="demo_pane_2" class="h-full">
    <div class="flex h-full items-center justify-center rounded-lg bg-gray-100 p-6">
      <span class="font-semibold">Two</span>
    </div>
  </LivePane.pane>
</LivePane.group>

