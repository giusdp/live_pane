      <span class="font-semibold">One</span>
    </div>
  </LivePane.pane>

  <LivePane.resizer
    id="demo-resizer"
    group_id="demo"
    class="relative flex h-full w-2 items-center justify-center"
  >
    <div class="z-10 h-7 flex items-center w-4 rounded-sm border bg-brand">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1em"
        height="1em"
